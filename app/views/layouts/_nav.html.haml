.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = link_to yield(:app_title), "/", :class => 'brand'
      .nav-collapse.collapse

        <!-- search bar somewhere -->

        %ul.nav.pull-right
          %li{:class => ('active' if params[:action] == 'about')}
            = link_to "About", "/about"
          %li{:class => ('active' if params[:action] == 'contact')}
            = link_to "Contact", "/contact"
